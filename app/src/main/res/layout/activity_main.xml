<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#888" />
    <LinearLayout
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="5dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/send_section"
            android:src="@drawable/ic_receiver"
            android:tint="@color/home_btn_color"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <View
            android:layout_height="match_parent"
            android:layout_width="0.1dp"
            android:background="#888" />
        <ImageView
            android:id="@+id/receive_section"
            android:src="@drawable/ic_sender"
            android:tint="@color/home_btn_color"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:paddingBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/send_title"
            android:text="@string/title_send"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/home_btn_color"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <View
            android:layout_height="match_parent"
            android:layout_width="0.1dp"
            android:background="#888" />
        <TextView
            android:id="@+id/receive_title"
            android:text="@string/title_receive"
            android:textColor="@color/home_btn_color"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>